<div class="center-main-container" align="center">
    <div class="center-container">
        <div class="center-main-container-title">
            <h1><%= l(:edit_asset_category) %></h1>
        </div>
        <div class="inner-container">
            <%= form_for @asset_type, :url => { :action => "update", :id => @asset_type.id } do |f| %>
                <table id="rounded-corner-index" summary="Asset Properties">
                    <thead>
                        <tr>
                            <th scope="col" class="rounded-company">&nbsp;</th>
                            <th scope="col" class="rounded-q1">&nbsp;</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <td class="rounded-foot-left">&nbsp;</td>
                            <td class="rounded-foot-right" align="left">
                                <%= submit_tag l(:save) %>
                            </td>
                        </tr>
                    </tfoot>
                    <tbody>
                        <tr>
                            <td><%= l(:name) %></td>
                            <td><%= f.text_field :name %></td>
                        </tr>
                        <tr>
                            <td><%= l(:description) %>:</td>
                            <td><%= f.text_area :description, :size=>"23x10" %></td>
                        </tr>
                    </tbody>
                </table>
            <% end %>
          </div>
    </div>
</div>
   


<% content_for :header_tags do %>
    <%= stylesheet_link_tag 'assets', :plugin => 'redmine_asset_tracker' %>
<% end %>