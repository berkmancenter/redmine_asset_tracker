<div class="center-main-container" align="center">
    <div class="center-container">
        <div class="center-main-container-title">
            <h1><%= l(:new_asset) %></h1>
        </div>
            <br />
            <div style="float:left;">
              <% form_for :asset, @asset, :url => { :action => "create" } do |f| %>
                  <table id="rounded-corner" summary="Asset Properties">
                      <thead>
                          <tr>
                              <th scope="col" class="rounded-company" colspan="2"><%= l(:create_from_scratch) %></th>
                          </tr>
                      </thead>
                      <tfoot>
                          <tr>
                              <td class="rounded-foot-left">&nbsp;</td>
                              <td class="rounded-foot-right">
                                  <%= submit_tag 'Create' %>
                              </td>
                          </tr>
                      </tfoot>
                      <tbody>
                          <tr>
                              <td><%= l(:name) %></td>
                              <td><%= f.text_field :name %></td>
                          </tr>
                          <tr>
                              <td><%= l(:description) %></td>
                              <td><%= f.text_area :description, :size=>"23x10" %></td>
                          </tr>
                          <tr>
                              <td><%= l(:asset_type) %></td>
                              <td id='asset_types_td'>
                                <%= render :partial => 'asset_types/asset_types_dropdown', :locals => { :asset => @asset } %>
                              </td>
                          </tr>
                          <tr>
                              <td><%= l(:asset_group) %></td>
                              <td id='asset_groups_td'>
                                <%= render :partial => 'asset_groups/asset_groups_dropdown', :locals => { :asset => @asset } %>
                              </td>
                          </tr>
                      </tbody>
                  </table>
              <% end %>
            </div>
            <div class="left;">
              <% form_tag :action => "clone" do %>

                 <table id="rounded-corner" summary="Asset Properties">
                      <thead>
                          <tr>
                              <th scope="col" class="rounded-company" colspan="2"><%= l(:or_clone_an_existing_one) %></th>
                          </tr>
                      </thead>
                      <tfoot>
                          <tr>
                              <td class="rounded-foot-left">&nbsp;</td>
                              <td class="rounded-foot-right">
                                  <%= submit_tag l(:clone_it) %>
                              </td>
                          </tr>
                      </tfoot>
                      <tbody>
                          <tr>
                              <td colspan="2" align="center">
                                  <%= select_tag :existing_custom_field, option_groups_from_collection_for_select(AssetType.all, :assets, :name, :id, :name, nil), :size => 18, :class => "clonable-fields" %>  
                              </td>
                          </tr>
                          <tr>
                              <td><%= l(:name) %></td>
                              <td><%= text_field_tag :name %></td>
                          </tr>
                      </tbody>
                  </table>
              <% end %>
            </div>
            <br class="clear-both" />
            <% content_for :header_tags do %>
                <%= stylesheet_link_tag 'assets', :plugin => 'redmine_asset_tracker' %>
                <%= stylesheet_link_tag 'facebox', :plugin => 'redmine_asset_tracker' %>
                <%= javascript_include_tag 'facebox', :plugin => 'redmine_asset_tracker' %>
            <% end %>
        </div>
    </div>
</div>